<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ}] loglevel=%level, logger=%logger{1}, %msg, thread=%thread%n%ex"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.kalaha" level="INFO"/>
        <Root level="ERROR">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>